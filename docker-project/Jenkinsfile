pipeline {
    agent any
    stages {
        stage('Declarative: Checkout SCM') {
            steps {
                checkout scm
            }
        }
        stage('Build Containers') {
            steps {
                dir('docker-project') {
                    script {
                        sh 'docker compose down -v'
                        sh 'docker compose up -d'
                    }
                }
            }
        }
        stage('Start Application') {
            steps {
                dir('docker-project') {
                    script {
                        // Comandos adicionais para iniciar a aplicação, se necessário
                    }
                }
            }
        }
    }
}
