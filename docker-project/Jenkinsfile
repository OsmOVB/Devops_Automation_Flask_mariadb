pipeline {
    agent any
    
    stages {
        stage('Checkout Code') {
            steps {
                // Faz o checkout do código da branch main
                git branch: 'main', url: 'https://github.com/OsmOVB/Devops_Automation_Flask_mariadb.git'
            }
        }
        
        stage('Build and Run Docker Containers') {
            steps {
                dir('docker-project') {
                    // Comando para construir e iniciar os containers
                    sh 'docker-compose up --build -d'
                }
            }
        }
        
        stage('Open Application') {
            steps {
                script {
                    // Verificar se está em um ambiente Linux para abrir automaticamente
                    if (isUnix()) {
                        // Abre a aplicação no navegador (somente em Linux)
                        sh 'xdg-open http://localhost:5000 || true'
                    } else {
                        echo "Por favor, abra http://localhost:5000 no navegador manualmente."
                    }
                }
            }
        }
    }
    
    post {
        always {
            echo 'Limpando containers...'
            dir('docker-project') {
                // Para e remove os containers após a execução
                sh 'docker-compose down'
            }
        }
    }
}
