pipeline {
    agent any
    
    stages {
        stage('Checkout Code') {
            steps {
                // Checkout da branch main
                git branch: 'main', url: 'https://github.com/OsmOVB/Devops_Automation_Flask_mariadb.git'
            }
        }
        
        stage('Build Docker Images') {
            steps {
                dir('docker-project') {
                    sh 'docker-compose build'
                }
            }
        }
        
        stage('Run Containers') {
            steps {
                dir('docker-project') {
                    sh 'docker-compose up -d'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Limpando containers...'
            dir('docker-project') {
                sh 'docker-compose down'
            }
        }
    }
}
